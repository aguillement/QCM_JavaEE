<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>QCM_JavaEE</display-name>
  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
  <resource-ref>
    <description>Pool de connexion vers la base BDD_QCM</description>
    <res-ref-name>jdbc/BDD_QCM</res-ref-name>
    <res-type>javax.sql.DataSource</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <session-config>
    <session-timeout>10</session-timeout>
  </session-config>
  <servlet>
    <servlet-name>Connexion</servlet-name>
    <servlet-class>fr.eni.jee.bll.Connexion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Connexion</servlet-name>
    <url-pattern>/connexion</url-pattern>
  </servlet-mapping>  
  <servlet>
  <servlet-name>CreateQuestion</servlet-name>
  <servlet-class>fr.eni.jee.bll.CreateQuestion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreateQuestion</servlet-name>
    <url-pattern>/createQuestion</url-pattern>
  </servlet-mapping>  
  <servlet>
  <servlet-name>CreateTheme</servlet-name>
  <servlet-class>fr.eni.jee.bll.CreateTheme</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreateTheme</servlet-name>
    <url-pattern>/createTheme</url-pattern>
  </servlet-mapping>
</web-app>